<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:padding="16dp">


    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 하루는 어땠나요?"
        android:fontFamily="@font/my_custom_font"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:paddingTop="70dp"/>

    <TextView
        android:id="@+id/question_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="감정우표를 선택해주세요"
        android:fontFamily="@font/my_custom_font"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"/>

    <TextView
        android:id="@+id/question_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택한 감정우표를 기반으로 맞춤형 질문이 배달됩니다"
        android:fontFamily="@font/my_custom_font"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"/>

    <!-- 감정 선택 리스트 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <!-- 첫 번째 감정 버튼 (행복) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/happy_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_happy" />

            <TextView
                android:id="@+id/happy_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="더없이 행복한 하루였어요"
                android:fontFamily="@font/my_custom_font"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 두 번째 감정 버튼 (들뜨고 흥분) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/excited_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_excited" />

            <TextView
                android:id="@+id/excited_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="들뜨고 흥분돼요"
                android:fontFamily="@font/my_custom_font"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 세 번째 감정 버튼 (평범) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/common_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_common" />

            <TextView
                android:id="@+id/common_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평범한 하루였어요"
                android:fontFamily="@font/my_custom_font"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 네 번째 감정 버튼 (불안) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nervous_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_nervous" />

            <TextView
                android:id="@+id/nervous_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생각이 많아지고 불안해요"
                android:fontFamily="@font/my_custom_font"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 다섯 번째 감정 버튼 (화남) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mad_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_mad" />

            <TextView
                android:id="@+id/mad_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="부글부글 화가 나요"
                android:fontFamily="@font/my_custom_font"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
