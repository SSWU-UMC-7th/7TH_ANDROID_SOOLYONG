<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 상단 타이틀 텍스트 -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="투유"
        android:textColor="#000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" />

    <!-- 우측 상단 알림 아이콘 -->
    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="54dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp" />

    <!-- 날짜와 멘트 텍스트 레이아웃 -->
    <LinearLayout
        android:id="@+id/date_and_ment_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:textSize="18sp"
            android:textColor="#000"
            android:gravity="center" />

        <TextView
            android:id="@+id/ment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="멘트"
            android:textSize="18sp"
            android:textColor="#000"
            android:gravity="center" />
    </LinearLayout>

    <!-- 중앙 우편함 이미지 -->
    <ImageView
        android:id="@+id/postbox_image"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/ic_postbox"
        android:contentDescription="Postbox Image"
        app:layout_constraintTop_toBottomOf="@id/date_and_ment_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView: 따끈따끈한 친구들의 일기카드 안내 문구 -->
    <TextView
        android:id="@+id/friends_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="따끈따끈한 친구들의 일기카드를 확인해보세요!"
        android:textSize="16sp"
        android:textColor="#000"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/postbox_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 수평으로 일기 카드 배치 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/friends_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:contentDescription="Diary Card 1"
            android:src="@drawable/ic_diary_card" />

        <ImageView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_diary_card"
            android:contentDescription="Diary Card 2"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- 프래그먼트가 표시될 컨테이너 (fragment_container) -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/friends_text"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        android:layout_marginTop="16dp" />

    <!-- BottomNavigationView -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu"
        app:itemIconTint="@color/selector_nav_item_color"
        app:itemTextColor="@color/selector_nav_item_color"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
