<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/back"
    android:paddingTop="80dp">
    
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 하루는 어땠나요?"
        android:textSize="23sp"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/text01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="감정우표를 선택해주세요"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/text02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택한 감정우표를 기반으로 맞춤형 질문이 배달됩니다"
        android:textSize="6sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
/>


    <ImageView
        android:id="@+id/button01"
        android:layout_width="40dp"
        android:layout_height="44.13dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/image01" />

    <TextView
        android:id="@+id/textView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더없이 행복한 하루였어요"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="16dp"/>



    <ImageView
        android:id="@+id/button02"
        android:layout_width="40dp"
        android:layout_height="44.13dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/image02" />

    <TextView
        android:id="@+id/textView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="들뜨고 흥분돼요"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="16dp"/>


    <ImageView
        android:id="@+id/button03"
        android:layout_width="40dp"
        android:layout_height="43.13dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/image03" />

    <TextView
        android:id="@+id/textView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평범한 하루였어요"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="16dp"/>


    <ImageView
        android:id="@+id/button04"
        android:layout_width="40dp"
        android:layout_height="44.13dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/image04" />

    <TextView
        android:id="@+id/textView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생각이 많아지고 불안해요"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

    <!-- 다섯 번째 버튼과 텍스트 -->
    <ImageView
        android:id="@+id/button05"
        android:layout_width="40dp"
        android:layout_height="44.13dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/image05" />

    <TextView
        android:id="@+id/textView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="부글부글 화가 나요"
        android:textSize="14sp"
        android:layout_marginTop="16dp"/>

</LinearLayout>
